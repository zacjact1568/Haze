<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorGradientBar">
        <attr name="barHeight" format="dimension"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="ringColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="InlineListView">
        <attr name="gapBetweenItems" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="DualColorBar">
        <attr name="dcb_height" format="dimension"/>
        <attr name="dcb_colorStart" format="color"/>
        <attr name="dcb_colorEnd" format="color"/>
    </declare-styleable>

    <declare-styleable name="SpringLayout">
        <!-- TODO 为什么不能用 android:orientation？-->
        <attr name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

</resources>