<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

    </style>

    <style name="ToolbarSideIconStyle">

        <item name="android:layout_width">@dimen/toolbar_side_icon_size</item>
        <item name="android:layout_height">@dimen/toolbar_side_icon_size</item>
        <item name="android:layout_margin">@dimen/toolbar_side_icon_margin</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>

    </style>

    <style name="ToolbarCenterTextStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/toolbar_center_text_margin_vertical</item>
        <item name="android:textSize">@dimen/toolbar_center_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>