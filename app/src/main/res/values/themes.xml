<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:colorBackground">@color/background</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/family_barlow_noto_sans_sc</item>
        <!-- 需要加上这个，否则字体上下会有很高的留白 -->
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="IconButtonStyle">

        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/icon_button_padding</item>
        <item name="tint">@color/text_against_colorful_background</item>

    </style>

    <style name="ToolbarTitleStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/toolbar_title_margin_vertical</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">@color/text_against_colorful_background</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="InlineListViewStyle">

        <item name="android:orientation">vertical</item>

    </style>

    <style name="TemperatureRangeBarSideTemperatureStyle">

        <item name="android:textFontWeight">500</item>
        <!-- 26sp 应该足够显示三个字符了 -->
        <item name="android:layout_width">@dimen/sp_26</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <!-- Barlow 字体有点矮，看起来没有居中，故将文字抬高一点 -->
        <item name="android:paddingBottom">@dimen/sp_3</item>

    </style>

</resources>