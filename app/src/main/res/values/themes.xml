<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:fontFamily">@font/family_mi_sans</item>

    </style>

    <style name="IconButtonStyle">

        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/icon_button_padding</item>

    </style>

    <style name="ToolbarTitleStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/toolbar_title_margin_vertical</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="InlineListViewStyle">

        <item name="android:orientation">vertical</item>

    </style>

</resources>