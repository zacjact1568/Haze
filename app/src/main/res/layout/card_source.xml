<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".components.recycler.cards.SourceCard">

    <TextView
        android:id="@+id/v_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/source_text"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_source"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <ImageView
        android:id="@+id/v_source"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginStart="@dimen/dp_4"
        android:src="@drawable/qweather_logo"
        android:scaleType="fitStart"
        app:layout_constraintStart_toEndOf="@+id/v_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_text"
        app:layout_constraintBottom_toBottomOf="@+id/v_text"
        app:layout_constraintDimensionRatio="w,4:1"
        app:tint="@color/text" />

</androidx.constraintlayout.widget.ConstraintLayout>