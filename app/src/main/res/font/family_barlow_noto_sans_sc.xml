<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">

    <font
        android:font="@font/barlow_noto_sans_sc_regular"
        android:fontStyle="normal"
        android:fontWeight="400" />

    <font
        android:font="@font/barlow_noto_sans_sc_medium"
        android:fontStyle="normal"
        android:fontWeight="500" />

    <!-- 用 SemiBold 当 Bold -->
    <font
        android:font="@font/barlow_noto_sans_sc_semi_bold"
        android:fontStyle="normal"
        android:fontWeight="700" />

    <!-- ExtraBold 仅用于温度显示，无需中文 -->
    <font
        android:font="@font/barlow_extra_bold"
        android:fontStyle="normal"
        android:fontWeight="800" />

</font-family>